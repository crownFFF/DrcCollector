---
import "/src/style/style.css"

import Header from "../components/header.astro"
import Footer from "../components/footer.astro"

const { pagetitle, bodyClass } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1"
		/>
		<meta name="description" content="郵票，郵封，首日封，實寄封，其他郵封" />
		<link rel="icon" href="../../public/images/stamp.png" />
		<link rel="apple-touch-icon" href="../../public/images/stamp.png" />

		<title>DRC收藏家 | 郵票郵封 | {pagetitle}</title>

	</head>
	<body class={bodyClass}>


		<!-- header -->
		<Header client:load />

		<slot />

		<!-- Footer -->
		<Footer />

		<script src="/src/scripts/main.js"></script>
	</body>
</html>
