---
const { pagetitle,BannerImg } = Astro.props
---
<main>
  <section class="innerBannerArea">
    <div class="innerBanner">
      <img src={BannerImg} alt="" draggable="false" />
    </div>
    <div class="BannerTitle">
      <h3>{pagetitle}</h3>
    </div>
    <div class="BannerSubTitle">
      <h3><a href="/">首頁</a> - {pagetitle}</h3>
    </div>
  </section>

  <slot />

</main>
