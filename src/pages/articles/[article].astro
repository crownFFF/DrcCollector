---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BannerLayout from "../../layouts/BannerLayout.astro";
import Aside from "../../components/aside.astro";
const BannerImg = "../stamp013-1.png";

export function getStaticPaths() {
  return [
    {params: {article: 'article'}},
    {params: {article: 'introduction'}},
    {params: {article: 'story'}},
    {params: {article: 'exhibition'}},
  ];
}
const { article } = Astro.params;

---

<BaseLayout pagetitle="文章與郵集" bodyClass="articlePage">
  <BannerLayout pagetitle="文章與郵集" BannerImg={BannerImg}>
    <section class="articleContentArea">
      <Aside asideTitle="文章與郵集">
        <li class="asideItem"><a href="/articles/article">文章-閱讀</a></li>
        <li class="asideItem"><a href="/articles/introduction">郵集-介紹</a></li>
        <li class="asideItem"><a href="/articles/story">郵集-故事</a></li>
        <li class="asideItem"><a href="/articles/exhibition">郵集-展示</a></li>
      </Aside>
    </section>
  </BannerLayout>
</BaseLayout>
